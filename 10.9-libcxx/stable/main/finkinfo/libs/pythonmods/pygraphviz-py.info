<<

InstallScript: <<
	find . -name "*.pyc" -delete
	%p/bin/python%type_raw[python] setup.py install --root=%d
	mv %i/share/doc/pygraphviz-* %i/share/doc/pygraphviz-py%type_pkg[python]
